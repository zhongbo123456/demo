<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.UserMapper">

    <resultMap id="UserMap" type="com.example.demo.entity.User">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <collection property="roles" ofType="java.lang.String" javaType="java.util.List">
            <result column="role"/>
        </collection>
    </resultMap>

    <select id="login" resultType="com.example.demo.entity.User">
    select
    * from
    user
where
username=#{username} and password=#{password}
    </select>
    <select id="selectUsrMesage" resultMap="UserMap">
SELECT
u.id,
u.username,
u.`password`,
r.role
FROM `user` u LEFT JOIN user_role ur on u.id=ur.user_id
LEFT JOIN role r on ur.role_id=r.id
WHERE u.id=#{userId}
    </select>


</mapper>